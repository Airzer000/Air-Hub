--// Key System
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local TweenService = game:GetService("TweenService")

-- Links
local KeyURL = "https://raw.githubusercontent.com/Airzer000/Air-Hub/refs/heads/main/Idk/Key"
local ScriptURL = "https://raw.githubusercontent.com/Airzer000/Air-Hub/refs/heads/main/Modules/Forsaken%20auto%20generator.lua"
local GetKeyLink = "https://link-center.net/1392970/N5FEgxuOJEc9"

-- Pegar Key do GitHub
local KeyCorreta
pcall(function()
    KeyCorreta = game:HttpGet(KeyURL)
end)

if KeyCorreta then
    KeyCorreta = KeyCorreta:gsub("%s+", "")
else
    warn("‚ùå N√£o consegui pegar a key do GitHub!")
    KeyCorreta = "erro"
end

-- Criar GUI
local ScreenGui = Instance.new("ScreenGui", LocalPlayer:WaitForChild("PlayerGui"))
ScreenGui.ResetOnSpawn = false

local Frame = Instance.new("Frame", ScreenGui)
Frame.Size = UDim2.new(0, 320, 0, 170)
Frame.Position = UDim2.new(0.5, -160, 0.5, -85)
Frame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
Frame.BorderSizePixel = 0
Frame.BackgroundTransparency = 1 -- come√ßa invis√≠vel

-- Fade In
TweenService:Create(Frame, TweenInfo.new(0.6, Enum.EasingStyle.Quad), {BackgroundTransparency = 0}):Play()

-- Borda RGB
local UIStroke = Instance.new("UIStroke", Frame)
UIStroke.Thickness = 3

task.spawn(function()
    while Frame.Parent do
        for i = 0, 1, 0.01 do
            UIStroke.Color = Color3.fromHSV(i, 1, 1)
            task.wait(0.03)
        end
    end
end)

local UICorner = Instance.new("UICorner", Frame)
UICorner.CornerRadius = UDim.new(0, 12)

local Title = Instance.new("TextLabel", Frame)
Title.Size = UDim2.new(1, 0, 0, 40)
Title.Text = "üîë Air Hub Key System"
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.BackgroundTransparency = 1
Title.Font = Enum.Font.SourceSansBold
Title.TextSize = 20

local TextBox = Instance.new("TextBox", Frame)
TextBox.Size = UDim2.new(0.8, 0, 0, 30)
TextBox.Position = UDim2.new(0.1, 0, 0.4, 0)
TextBox.PlaceholderText = "Insira a key"
TextBox.Text = ""
TextBox.Font = Enum.Font.SourceSans
TextBox.TextSize = 18

local Confirm = Instance.new("TextButton", Frame)
Confirm.Size = UDim2.new(0.35, 0, 0, 30)
Confirm.Position = UDim2.new(0.1, 0, 0.75, 0)
Confirm.Text = "‚úÖ Confirmar"
Confirm.BackgroundColor3 = Color3.fromRGB(50, 150, 50)
Confirm.TextColor3 = Color3.fromRGB(255, 255, 255)
Confirm.Font = Enum.Font.SourceSansBold
Confirm.TextSize = 18

local ConfirmCorner = Instance.new("UICorner", Confirm)
ConfirmCorner.CornerRadius = UDim.new(0, 8)
local ConfirmStroke = Instance.new("UIStroke", Confirm)
ConfirmStroke.Thickness = 2
ConfirmStroke.Color = Color3.fromRGB(20, 80, 20)

local GetKey = Instance.new("TextButton", Frame)
GetKey.Size = UDim2.new(0.35, 0, 0, 30)
GetKey.Position = UDim2.new(0.55, 0, 0.75, 0)
GetKey.Text = "üåê Get Key"
GetKey.BackgroundColor3 = Color3.fromRGB(0, 120, 200)
GetKey.TextColor3 = Color3.fromRGB(255, 255, 255)
GetKey.Font = Enum.Font.SourceSansBold
GetKey.TextSize = 18

local GetKeyCorner = Instance.new("UICorner", GetKey)
GetKeyCorner.CornerRadius = UDim.new(0, 8)
local GetKeyStroke = Instance.new("UIStroke", GetKey)
GetKeyStroke.Thickness = 2
GetKeyStroke.Color = Color3.fromRGB(0, 70, 150)

-- Fun√ß√µes
GetKey.MouseButton1Click:Connect(function()
    setclipboard(GetKeyLink)
    Title.Text = "üîë Link copiado!"
end)

Confirm.MouseButton1Click:Connect(function()
    if TextBox.Text == KeyCorreta then
        -- Fade Out antes de destruir
        TweenService:Create(Frame, TweenInfo.new(0.6, Enum.EasingStyle.Quad), {BackgroundTransparency = 1}):Play()
        task.wait(0.6)
        Frame:Destroy()
        
        print("‚úÖ Key correta! Script liberado.")
        loadstring(game:HttpGet(ScriptURL))()
    else
        TextBox.Text = ""
        TextBox.PlaceholderText = "‚ùå Key incorreta!"
    end
end)
